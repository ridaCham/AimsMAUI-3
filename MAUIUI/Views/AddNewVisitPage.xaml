                        <RadioButton x:Name=" BladderBowelNormal_radiobutton" Style="{StaticResource MicroRadioButton}" Grid.Column="1" GroupName="BladderGroup" HorizontalOptions="Center" />
                        <RadioButton x:Name=" BladderBowelMild_radiobutton" Style="{StaticResource MicroRadioButton}" Grid.Column="2" GroupName="BladderGroup" HorizontalOptions="Center" />
                        <RadioButton x:Name=" BladderBowelModerate_radiobutton" Style="{StaticResource MicroRadioButton}" Grid.Column="3" GroupName="BladderGroup" HorizontalOptions="Center" />
                        <RadioButton x:Name=" BladderBowelSevere_radiobutton" Style="{StaticResource MicroRadioButton}" Grid.Column="4" GroupName="BladderGroup" HorizontalOptions="Center" />
                    </Grid>

                </Grid>

                <Grid Grid.Row="4" RowDefinitions="*, *, *, *, *" ColumnDefinitions="*, *, *, *, 2*, 2*, 2*">
                    <Label Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="3" Style="{StaticResource MicroTextLabel}" Text="Babinski" HorizontalOptions="Start" VerticalOptions="End" FontAttributes="Bold" />



                    <Grid Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="7" ColumnDefinitions="*, *, *, *, 2*, 2*, 2*">
                        <Label Grid.Column="0" Style="{StaticResource MicroTextLabel}" Text="R" HorizontalOptions="End" VerticalOptions="Center" FontAttributes="Bold" />
                        <RadioButton x:Name=" BabinskiRYes_radioButton" Style="{StaticResource MicroRadioButton}" Grid.Column="1" GroupName="BabinskiRGroup" Content="Yes" HorizontalOptions="Center" />
                        <RadioButton x:Name=" BabinskiRNo_radioButton" Style="{StaticResource MicroRadioButton}" Grid.Column="2" GroupName="BabinskiRGroup" Content="No"  HorizontalOptions="Center" />
                    </Grid>


                    <Grid Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="7" ColumnDefinitions="*, *, *, *, 2*, 2*, 2*">
                        <Label Grid.Column="0" Style="{StaticResource MicroTextLabel}" Text="L" HorizontalOptions="End" VerticalOptions="Center" FontAttributes="Bold" />
                        <RadioButton x:Name=" BabinskiLYes_radioButton" Style="{StaticResource MicroRadioButton}" Grid.Column="1" GroupName="BabinskiLGroup" Content="Yes" HorizontalOptions="Center" />
                        <RadioButton x:Name=" BabinskiLNo_radioButton" Style="{StaticResource MicroRadioButton}" Grid.Column="2" GroupName="BabinskiLGroup" Content="No"  HorizontalOptions="Center" />
                    </Grid>


                    <Label Grid.Row="3" Grid.Column="0" Grid.ColumnSpan="3" Style="{StaticResource MicroTextLabel}" Text="Orthostatic Hypotension" HorizontalOptions="Start" VerticalOptions="End" FontAttributes="Bold" />
                    <Grid Grid.Row="4" Grid.Column="0" Grid.ColumnSpan="7" ColumnDefinitions="*, *, *, *, 2*, 2*, 2*">
                        <RadioButton x:Name=" OrthostaticYes_radioButton" Style="{StaticResource MicroRadioButton}" Grid.Column="1" GroupName="OrthostaticGroup" Content="Yes" HorizontalOptions="Center" />
                        <RadioButton x:Name=" OrthostaticNo_radioButton" Style="{StaticResource MicroRadioButton}" Grid.Column="2" GroupName="OrthostaticGroup" Content="No"  HorizontalOptions="Center" />
                    </Grid>


                    <Label Grid.Row="0" Grid.Column="3" Grid.ColumnSpan="3" Style="{StaticResource MicroTextLabel}" Text="Muscle Tone" HorizontalOptions="Start" VerticalOptions="End" FontAttributes="Bold" />

                    <Grid Grid.Row="1" Grid.Column="3" Grid.ColumnSpan="4" ColumnDefinitions="*, *, *, * ">
                        <Label Grid.Column="0" Style="{StaticResource MicroTextLabel}" Text="RU" HorizontalOptions="End" VerticalOptions="Center" FontAttributes="Bold" />
                        <RadioButton x:Name=" MusculeToneRUNormal_radioButton" Style="{StaticResource MicroRadioButton}" Grid.Column="1" GroupName="MuscleToneRUGroup" Content="Normal"  HorizontalOptions="Center" />
                        <RadioButton x:Name=" MusculeToneRUHypotonia_radioButton" Style="{StaticResource MicroRadioButton}" Grid.Column="2" GroupName="MuscleToneRUGroup" Content="Hypotonia"  HorizontalOptions="Center" />
                        <RadioButton x:Name=" MusculeToneRUHypertoni_radioButton" Style="{StaticResource MicroRadioButton}" Grid.Column="3" GroupName="MuscleToneRUGroup" Content="Hypertonia"  HorizontalOptions="Center" />
                    </Grid>

                    <Grid Grid.Row="2" Grid.Column="3" Grid.ColumnSpan="4" ColumnDefinitions="*, *, *, * ">
                        <Label Grid.Column="0" Style="{StaticResource MicroTextLabel}" Text="LU" HorizontalOptions="End" VerticalOptions="Center" FontAttributes="Bold" />
                        <RadioButton x:Name=" MusculeToneLUNormal_radioButton" Style="{StaticResource MicroRadioButton}" Grid.Column="1" GroupName="MuscleToneLUGroup" Content="Normal"  HorizontalOptions="Center" />
                        <RadioButton x:Name=" MusculeToneLUHypotonia_radioButton" Style="{StaticResource MicroRadioButton}" Grid.Column="2" GroupName="MuscleToneLUGroup" Content="Hypotonia"  HorizontalOptions="Center" />
                        <RadioButton x:Name=" MusculeToneLUHypertoni_radioButton" Style="{StaticResource MicroRadioButton}" Grid.Column="3" GroupName="MuscleToneLUGroup" Content="Hypertonia"  HorizontalOptions="Center" />
                    </Grid>

                    <Grid Grid.Row="3" Grid.Column="3" Grid.ColumnSpan="4" ColumnDefinitions="*, *, *, * ">
                        <Label Grid.Column="0" Style="{StaticResource MicroTextLabel}" Text="RL" HorizontalOptions="End" VerticalOptions="Center" FontAttributes="Bold" />
                        <RadioButton x:Name=" MusculeToneRLNormal_radioButton" Style="{StaticResource MicroRadioButton}" Grid.Column="1" GroupName="MuscleToneRLGroup" Content="Normal"  HorizontalOptions="Center" />
                        <RadioButton x:Name=" MusculeToneRLHypotonia_radioButton" Style="{StaticResource MicroRadioButton}" Grid.Column="2" GroupName="MuscleToneRLGroup" Content="Hypotonia"  HorizontalOptions="Center" />
                        <RadioButton x:Name=" MusculeToneRLHypertoni_radioButton" Style="{StaticResource MicroRadioButton}" Grid.Column="3" GroupName="MuscleToneRLGroup" Content="Hypertonia"  HorizontalOptions="Center" />
                    </Grid>

                    <Grid Grid.Row="4" Grid.Column="3" Grid.ColumnSpan="4" ColumnDefinitions="*, *, *, * ">
                        <Label Grid.Column="0" Style="{StaticResource MicroTextLabel}" Text="LL" HorizontalOptions="End" VerticalOptions="Center" FontAttributes="Bold" />
                        <RadioButton x:Name=" MusculeToneLLNormal_radioButton" Style="{StaticResource MicroRadioButton}" Grid.Column="1" GroupName="MuscleToneLLGroup" Content="Normal"  HorizontalOptions="Center" />
                        <RadioButton x:Name=" MusculeToneLLHypotonia_radioButton" Style="{StaticResource MicroRadioButton}" Grid.Column="2" GroupName="MuscleToneLLGroup" Content="Hypotonia"  HorizontalOptions="Center" />
                        <RadioButton x:Name=" MusculeToneLLHypertoni_radioButton" Style="{StaticResource MicroRadioButton}" Grid.Column="3" GroupName="MuscleToneLLGroup" Content="Hypertonia"  HorizontalOptions="Center" />
                    </Grid>

                </Grid>

                <Grid Style="{StaticResource MiddleSpacing}" Grid.Row="6" ColumnDefinitions="3*, *">
                    <Label Style="{StaticResource SmallTextLabel}" Grid.Column="0" HorizontalOptions="End" Text="TOTAL" FontAttributes="Bold" VerticalOptions="Center" />
                    <Border Grid.Column="1" StrokeShape="RoundRectangle 10" VerticalOptions="Center">
                        <Entry Style="{StaticResource MicroEntry}" BackgroundColor="White" />
                    </Border>
                </Grid>
            </Grid>
        </Border>

        <Grid Style="{StaticResource MiddleSpacing}" Grid.Column="1" RowDefinitions="1.5*, 7*, 21*, 7*">
            <Grid Style="{StaticResource MiddleSpacing}" Grid.Row="0" ColumnDefinitions="*, 3*, 2*, 5*, 2*, 3*">
                <Label Style="{StaticResource MicroTextLabel}" Grid.Column="0" Text="Date" VerticalOptions="Center" HorizontalOptions="End" />
                <Border Grid.Column="1" StrokeShape="RoundRectangle 10" VerticalOptions="Center" HorizontalOptions="Start" >
                    <DatePicker x:Name=" VisitDate_textBox" Style="{StaticResource MaxTodayDate}" />
                </Border>
                <Label Grid.Column="2" Style="{StaticResource MicroTextLabel}" Text="Examined By" VerticalOptions="Center" HorizontalOptions="End" />
                <Border Grid.Column="3" StrokeShape="RoundRectangle 10" VerticalOptions="Center"  StrokeThickness="0" >
                    <Picker x:Name=" Examinedby_combobox" Style="{StaticResource MicroPicker}" BackgroundColor="#5a81ab" TextColor="White">
                        <Picker.Items>
                            <x:String>A</x:String>
                            <x:String>B</x:String>
                            <x:String>C</x:String>
                            <x:String>D</x:String>
                        </Picker.Items>
                    </Picker>
                </Border>
            </Grid>
            <Grid Style="{StaticResource MiddleSpacing}" Grid.Row="1" ColumnDefinitions="*, *">
                <Border Style="{StaticResource MiddlePaddingBorder}" Grid.Column="0" BackgroundColor="#c8d1db">
                    <Grid RowDefinitions="*, *, *, *, *" ColumnDefinitions="*, *">
                        <Label Style="{StaticResource MicroTextLabel}" Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2" FontAttributes="Bold" Text="Status" />
                        <StackLayout Grid.Column="0" Grid.Row="1" Orientation="Horizontal">
                            <CheckBox x:Name=" FirstVisit_checkbox" />
                            <Label Style="{StaticResource MicroTextLabel}" Text="First Visit" VerticalOptions="Center" />
                        </StackLayout>
                        <StackLayout Grid.Column="0" Grid.Row="2" Orientation="Horizontal">
                            <CheckBox x:Name=" Administrative_checkbox" />
                            <Label Style="{StaticResource MicroTextLabel}" Text="Administrative" VerticalOptions="Center" />
                        </StackLayout>
                        <StackLayout Grid.Column="0" Grid.Row="3" Orientation="Horizontal">
                            <CheckBox x:Name=" Routine_checkbox" />
                            <Label Style="{StaticResource MicroTextLabel}" Text="Routine" VerticalOptions="Center" />
                        </StackLayout>
                        <StackLayout Grid.Column="1" Grid.Row="1" Orientation="Horizontal">
                            <CheckBox x:Name=" SuspectedRelapse_checkbox" />
                            <Label Style="{StaticResource MicroTextLabel}" Text="Suspected Relapse" VerticalOptions="Center" />
                        </StackLayout>
                        <StackLayout Grid.Column="1" Grid.Row="2" Orientation="Horizontal">
                            <CheckBox x:Name=" Phone_checkbox" />
                            <Label Style="{StaticResource MicroTextLabel}" Text="Phone" VerticalOptions="Center" />
                        </StackLayout>
                        <StackLayout Grid.Column="1" Grid.Row="3" Orientation="Horizontal">
                            <CheckBox x:Name=" Retrospective_checkbox" />
                            <Label Style="{StaticResource MicroTextLabel}" Text="Retrospective" VerticalOptions="Center" />
                        </StackLayout>

                    </Grid>
                </Border>
                <Border Style="{StaticResource MiddlePaddingBorder}" Grid.Column="1" BackgroundColor="#c8d1db">
                    <Grid Style="{StaticResource MiddleSpacing}" RowDefinitions="*, 2*, 2*, 2*" ColumnDefinitions="*, *, *, *, *, *, *, *">
                        <Label Style="{StaticResource MicroTextLabel}" Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="8" Text="Vital Signs" FontAttributes="Bold" />

                        <Label Style="{StaticResource MicroTextLabel}" Grid.Row="1" Grid.Column="0" VerticalOptions="Center" HorizontalOptions="End" Text="Height:" />
                        <Border Grid.Row="1" Grid.Column="1" StrokeShape="RoundRectangle 10" VerticalOptions="Center">
                            <Entry x:Name=" Height_textbox" Style="{StaticResource MicroEntry}" BackgroundColor="White" />
                        </Border>
                        <Label Style="{StaticResource MicroTextLabel}" Grid.Row="1" Grid.Column="2" VerticalOptions="Center" HorizontalOptions="End" Text="Weight:" />
                        <Border Grid.Row="1" Grid.Column="3" StrokeShape="RoundRectangle 10" VerticalOptions="Center">
                            <Entry x:Name=" Weight_textBox" Style="{StaticResource MicroEntry}" BackgroundColor="White" />
                        </Border>
                        <Label Style="{StaticResource MicroTextLabel}" Grid.Row="1" Grid.Column="4" VerticalOptions="Center" HorizontalOptions="End" Text="BMI:" />
                        <Border Grid.Row="1" Grid.Column="5" StrokeShape="RoundRectangle 10" VerticalOptions="Center">
                            <Entry x:Name=" BMI_textBox" Style="{StaticResource MicroEntry}" BackgroundColor="White" />
                        </Border>
                        <Label Style="{StaticResource MicroTextLabel}" Grid.Row="1" Grid.Column="6" VerticalOptions="Center" HorizontalOptions="End" Text="Pulse:" />
                        <Border Grid.Row="1" Grid.Column="7" StrokeShape="RoundRectangle 10" VerticalOptions="Center">
                            <Entry x:Name=" Pulse_textBox" Style="{StaticResource MicroEntry}" BackgroundColor="White" />
                        </Border>

                        <Label Style="{StaticResource MicroTextLabel}" Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="2" VerticalOptions="Center" HorizontalOptions="End" Text="Blood Pressure:" />
                        <Border Grid.Row="2" Grid.Column="2" StrokeShape="RoundRectangle 10" VerticalOptions="Center">
                            <Entry x:Name=" BloodPressure_textBox1" Style="{StaticResource MicroEntry}" BackgroundColor="White" />
                        </Border>
                        <Border Grid.Row="2" Grid.Column="3" StrokeShape="RoundRectangle 10" VerticalOptions="Center">
                            <Entry x:Name=" BloodPressure_textBox2" Style="{StaticResource MicroEntry}" BackgroundColor="White" />
                        </Border>

                        <Label Style="{StaticResource MicroTextLabel}" Grid.Row="2" Grid.Column="4" Grid.ColumnSpan="3" VerticalOptions="Center" HorizontalOptions="End" Text="Counts (One Breath):" />
                        <Border Grid.Row="2" Grid.Column="7" StrokeShape="RoundRectangle 10" VerticalOptions="Center">
                            <Entry x:Name=" Counts_textBox" Style="{StaticResource MicroEntry}" BackgroundColor="White" />
                        </Border>

                        <Label Style="{StaticResource MicroTextLabel}" Grid.Row="3" Grid.Column="4" Grid.ColumnSpan="3" VerticalOptions="Center" HorizontalOptions="End" Text="Temperature:" />
                        <Border Grid.Row="3" Grid.Column="7" StrokeShape="RoundRectangle 10" VerticalOptions="Center">
                            <Entry x:Name=" Temperature_textBox" Style="{StaticResource MicroEntry}" BackgroundColor="White" />
                        </Border>
                    </Grid>
                </Border>
            </Grid>

            <StackLayout x:Name="layout_Symptoms" Grid.Row="2">

            </StackLayout>
            <Grid Grid.Row="3" Style="{StaticResource MiddleSpacing}" ColumnDefinitions="*, *, *, *, *" RowDefinitions="2*, *, 2*, 2*">
                <Button Style="{StaticResource MicroButton}" x:Name="Button_Symptoms" MinimumHeightRequest="0" Padding="0" Grid.Row="0" Grid.Column="0" Text="Symptoms" FontAttributes="Bold" BackgroundColor="#1D3A5A" Clicked="Button_Symptoms_Clicked" />
                <Button Style="{StaticResource MicroButton}" x:Name="Button_Tests" MinimumHeightRequest="0" Padding="0" Grid.Row="0" Grid.Column="1" Text="TESTS" FontAttributes="Bold" BackgroundColor="#316297" Clicked="Button_Tests_Clicked" />
                <Button Style="{StaticResource MicroButton}" x:Name="Button_EDSS" MinimumHeightRequest="0" Padding="0" Grid.Row="0" Grid.Column="2" Text="EDSS" FontAttributes="Bold" BackgroundColor="#5A81AB" Clicked="Button_EDSS_Clicked" />
                <Button Style="{StaticResource MicroButton}" x:Name="Button_WalkingVideo" MinimumHeightRequest="0" Padding="0" Grid.Row="0" Grid.Column="3" Text="Walking Video" FontAttributes="Bold" BackgroundColor="#83A0C0" Clicked="Button_WalkingVideo_Clicked" />
                <Button Style="{StaticResource MicroButton}" x:Name="Button_SpeechVoice" MinimumHeightRequest="0" Padding="0" Grid.Row="0" Grid.Column="4" Text="Speech Voice" FontAttributes="Bold" BackgroundColor="#83A0C0" Clicked="Button_SpeechVoice_Clicked" />


                <Label Style="{StaticResource MicroTextLabel}" Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="5" Text="Remarks" FontAttributes="Bold" x:Name=" Remarks_textbox" VerticalOptions="End" />
                <Border Grid.Row="2" Grid.RowSpan="2" Grid.Column="0" Grid.ColumnSpan="4" StrokeShape="RoundRectangle 10">
                    <Editor BackgroundColor="White"/>
                </Border>

                <Button Style="{StaticResource MicroButton}" x:Name="Button_Save" Grid.Row="3" Grid.Column="4" MinimumHeightRequest="0" Padding="0" Text="Save" FontAttributes="Bold" BackgroundColor="#1D3A5A" Clicked="Button_Save_Clicked" />

            </Grid>
        </Grid>


    </Grid>
</ContentPage>