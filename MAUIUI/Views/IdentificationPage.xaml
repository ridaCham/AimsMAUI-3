                <Label HorizontalOptions="End" VerticalOptions="Center" Text="State"  Grid.Column="0" Grid.Row="1"  Style="{StaticResource MicroTextLabel}" />
                <Border  Grid.Column="1" Grid.Row="1" BackgroundColor="White"  Stroke="Gray" StrokeShape="RoundRectangle 10" VerticalOptions="Center" >
                    <Entry x:Name="StateField_textBox" Style="{StaticResource MicroEntry}" />
                </Border>
            </Grid>
            
