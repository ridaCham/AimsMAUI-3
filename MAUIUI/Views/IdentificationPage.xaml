                        </Picker.Items>
                    </Picker>
                </Border>

                <Label HorizontalOptions="End" VerticalOptions="Center" Text="Phone"  Grid.Column="0" Grid.Row="1" Style="{StaticResource MicroTextLabel}"  />
                <Border  Grid.Column="1" Grid.Row="1" BackgroundColor="White"  Stroke="Gray" StrokeShape="RoundRectangle 10" VerticalOptions="Center" >
                    <Entry x:Name="Phone_textBox" Style="{StaticResource MicroEntry}" />
                </Border>

                <Label HorizontalOptions="End" VerticalOptions="Center" Text="E-mail"  Grid.Column="2" Grid.Row="1" Style="{StaticResource MicroTextLabel}"  />
                <Border  Grid.Column="3" Grid.Row="1" BackgroundColor="White"  Stroke="Gray" StrokeShape="RoundRectangle 10" VerticalOptions="Center" >
                    <Entry x:Name="Email_textBox" Style="{StaticResource MicroEntry}" />
                </Border>

                <Label HorizontalOptions="End" VerticalOptions="Center" Text="Employment Status"  Grid.Column="0" Grid.Row="2" Style="{StaticResource MicroTextLabel}"  />
                <Border  Grid.Column="1" Grid.Row="2"  StrokeShape="RoundRectangle 10,10,10,10" VerticalOptions="Center"  StrokeThickness="0" >
                    <Picker x:Name="EmployementStatus_comboBox" BackgroundColor="#5a81ab"  TextColor="White" Style="{StaticResource MicroPicker}">
                        <Picker.Items>
                            <x:String>Employed</x:String>
                            <x:String>Retired</x:String>
                            <x:String>Student</x:String>
