                <Label HorizontalOptions="End" VerticalOptions="Center" Text="Eduction"  Grid.Column="2" Grid.Row="2" Style="{StaticResource MicroTextLabel}" />
                <Border  Grid.Column="3" Grid.Row="2"  StrokeShape="RoundRectangle 10,10,10,10" VerticalOptions="Center"  StrokeThickness="0" >
                    <Picker x:Name="Education_comboBox" BackgroundColor="#5a81ab"  TextColor="White" Style="{StaticResource MicroPicker}">
                        <Picker.Items>
