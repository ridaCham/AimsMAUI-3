                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <Label HorizontalOptions="End" VerticalOptions="Center" Text="Deceased?" Grid.Column="0" Grid.Row="0" Style="{StaticResource MicroTextLabel}"  />
                <StackLayout Orientation="Horizontal" Grid.Column="1" Grid.Row="0">
                    <RadioButton x:Name="YesDeceased_radioButton" Content="Yes" GroupName="DeceasedGroup" Style="{StaticResource MicroRadioButton}"/>
                    <RadioButton x:Name="NoDeceased_radioButton" Content="No" GroupName="DeceasedGroup" IsChecked="True" Style="{StaticResource MicroRadioButton}" />
                </StackLayout>

                <Label HorizontalOptions="End" VerticalOptions="Center" Text="Cause of Death" Grid.Column="2" Grid.Row="0" Style="{StaticResource MicroTextLabel}"  />
                <Border Grid.Column="3" Grid.Row="0" x:Name="borderCauseOfDeath" BackgroundColor="White"  Stroke="Gray" StrokeShape="RoundRectangle 10" VerticalOptions="Center" >
                    <Entry  Style="{StaticResource MicroEntry}" IsEnabled="{Binding Path=IsChecked, Source={x:Reference YesDeceased_radioButton}}">
                        <Entry.Triggers>
                            <DataTrigger TargetType="Entry" Binding="{Binding Path=IsChecked, Source={x:Reference YesDeceased_radioButton}}" Value="True">
                                <Setter Property="Text" Value="" />
                            </DataTrigger>
                        </Entry.Triggers>
                    </Entry>
                    <Border.Triggers>
                        <DataTrigger TargetType="Border" Binding="{Binding Path=IsChecked, Source={x:Reference YesDeceased_radioButton}}" Value="True">
                            <Setter Property="BackgroundColor" Value="White" />
                        </DataTrigger>
                        <DataTrigger TargetType="Border" Binding="{Binding Path=IsChecked, Source={x:Reference NoDeceased_radioButton}}" Value="True">
                            <Setter Property="BackgroundColor" Value="LightGray" />
                        </DataTrigger>
                    </Border.Triggers>
                </Border>

                <Label HorizontalOptions="End" VerticalOptions="Center" Text="Death Date" Grid.Column="2" Grid.Row="1"  Style="{StaticResource MicroTextLabel}" />
                <Border x:Name="borderDeathDate" Grid.Column="3" Grid.Row="1" BackgroundColor="White"  Stroke="Gray" StrokeShape="RoundRectangle 10" VerticalOptions="Center" >
                    <Entry  Style="{StaticResource MicroEntry}" IsEnabled="{Binding Path=IsChecked, Source={x:Reference YesDeceased_radioButton}}">
                        <Entry.Triggers>
                            <DataTrigger TargetType="Entry" Binding="{Binding Path=IsChecked, Source={x:Reference YesDeceased_radioButton}}" Value="True">
                                <Setter Property="Text" Value="" />
                            </DataTrigger>
                        </Entry.Triggers>
                    </Entry>
                    <Border.Triggers>
                        <DataTrigger TargetType="Border" Binding="{Binding Path=IsChecked, Source={x:Reference YesDeceased_radioButton}}" Value="True">
                            <Setter Property="BackgroundColor" Value="White" />
                        </DataTrigger>
                        <DataTrigger TargetType="Border" Binding="{Binding Path=IsChecked, Source={x:Reference NoDeceased_radioButton}}" Value="True">
                            <Setter Property="BackgroundColor" Value="LightGray" />
                        </DataTrigger>
                    </Border.Triggers>
